
<!DOCTYPE html>
<%- include('partials/head') %> 

  <body>
    <!-- ------------ navbar ------------- -->
    <!-- heading  -->
    <%- include('partials/nav',{location: "order"}) %> 
    <%- include('partials/scrollToTop')%> 
    <div class="container text-center col-lg-8 col-md-12 col-sm-12 mb-5 mt-4" style="border-bottom: 1px solid black;">
      <h1 class="merchheading">ORDERS</h1>
    </div>

    <div class="container col-lg-8 col-md-12 col-sm-12 mb-5 mt-4">
      <div class="row">
        <div class="col-sm-12 col-lg-12" style="color: #343a40;">
          <% let i=0; let j=1; let TransId="";%> 
          <% for(let orders of OrderProduct) { %> 
            
            
            <%if(TransId != OrderList[i].TransactionID && i!=0 ){ %>
            </div>
            <% }else if(i!=0){ %>
              <hr>
              <% } %>  
              
            <% if(TransId != OrderList[i].TransactionID){  j=0;%>

              <div class="card mb-3 col-sm-12 border_t" style="max-width: 100%; background-color: #eee; box-shadow: rgba(149, 157, 165, 0.3) 0px 8px 24px;">
                <div class="row g-0 border_t" style="background: #343a40; color: white; padding:20px;">
                  <div class="col-sm-4">Date:<br><%=OrderList[i].OrderDate.toString().slice(0,15); %></div>
                  <div class="col-sm-4">Total Price:<br><%=OrderList[i].Total %></div>
                  <div class="col-sm-4">Transaction ID:<br><%=OrderList[i].TransactionID %></div>
                </div>
                <% TransId=OrderList[i].TransactionID %> 
              <% } %>  
            <div class="row g-0" style="background-color: #eee; height: auto;">
              <div class="col-md-4 d-flex justify-content-center" style="padding: 20px; height: 150px;">
                <img style="border-radius: 15%;" src="<%=orders[0].pImage %> " class="img-fluid" style="height: auto; max-width: 100%;" alt="...">
              </div>
              
              <div class="col-md-8">
                <div class="card-body text-start">
                  <div class="d-flex justify-content-between">
                    <% if(orders.Size =='') {%>
                      <h5 class="card-title"><%=orders[0].pName  %> </h5>
                      <% }else{ %>  
                      <h5 class="card-title"><%=orders[0].pName  %> (<%= OrderList[i].Size %>)</h5>
                    <% } %> 
                  </div>
                  <p class="card-text"><%= orders[0].pDescription %> </p> 
                  
                  <div class="d-flex justify-content-between align-item-center">
                    <p class="card-text">Quantity: <%= OrderList[i].Quantity %> </p> 
                    <p class="fw-bold" style="font-size: 22px;">â‚¹<%= orders[0].pPrice %> </p>
                  </div>
                </div>
              </div>
            </div>
          
            
          <%j++; i++;} %> 
              </div>
        </div>
      </div>
    </div>
    <%- include('partials/footer') %> 
  
  </body>
