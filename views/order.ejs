
<!DOCTYPE html>
<%- include('partials/head') %> 

  <body>
    <!-- ------------ navbar ------------- -->
    <!-- heading  -->
    <%- include('partials/nav',{location: "order"}) %> 
    <%- include('partials/scrollToTop')%> 
    <div class="container text-center col-lg-8 col-md-12 col-sm-12 mb-5 mt-4" style="border-bottom: 1px solid black;">
      <h1 class="merchheading">ORDERS</h1>
    </div>

    <div class="container col-lg-8 col-md-12 col-sm-12 mb-5 mt-4">
      <div class="row">
        <div class="col-sm-12 col-lg-12" style="color: #343a40;">
          <% let i=0; %> 
          <% for(let orders of OrderList) { %> 
            
          <div class="card mb-3 col-sm-12" style="border-radius: 20px; max-width: 100%; box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;">
            <div class="row g-0">
              <!-- <div class="col-md-4" style="padding: 20px;">
                <img style="border-radius: 15%;" src=" " class="img-fluid" alt="...">
              </div> -->
              
              <div class="col-md-8">
                <div class="card-body text-start">
                  <div class="d-flex justify-content-between">
                    <% if(orders.Size =='') {%>
                      <h5 class="card-title"><%= orders.ProductID %></h5>
                      <% }else{ %>  
                      <h5 class="card-title"><%= orders.ProductID %>(<%= orders.Size %>)</h5>
                    <% } %> 
                      <p class="mt-1 fw-bold" style="font-size: 22px;">₹<%= orders.Total %> </p>
                  </div>
                  <p class="card-text"><%= orders.TransactionID %> </p> 
                  
                  <div class="d-flex justify-content-between">
                      <label id="qtyLabel" for="Quantity">Qty</label>
                  
                      <p class="mt-1 fw-bold" style="font-size: 22px;">₹<%= orders.Quantity %> </p>
                  
                </div>
                  
                  
                </div>
              </div>
            </div>
          </div>
          <% i++;} %> 
        </div>
        </div>
        </div>
    <%- include('partials/footer') %> 
  
  </body>
</html>